<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="onSingleScrollParallaxClicked"
            android:text="Scroll view single parallaxed item"
            tools:ignore="HardcodedText" />

	    <Button
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dp"
		    android:layout_marginTop="5dp"
		    android:onClick="onSingleScrollParallaxAlphaClicked"
		    android:text="Scroll view single parallaxed and alpha item"
		    tools:ignore="HardcodedText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="onMultipleScrollParallaxClicked"
            android:text="Scroll view three parallaxed item"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="onSingleListParallaxClicked"
            android:text="List view single parallaxed item"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="onMultipleListParallaxClicked"
            android:text="List view circular parallaxed item"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="onSingleExpandableListParallaxClicked"
            android:text="Expandable list view single parallaxed item"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="onMultipleExpandableListParallaxClicked"
            android:text="Expandable list view circular parallaxed item"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</ScrollView>